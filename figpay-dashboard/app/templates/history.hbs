<div class="main-panel">
  <div class="content">
    <div class="row">
      <div class="card card-plain">
        <div class="card-header">
          <h4 class="title">Recent Transactions</h4>
          <p class="category">May 2017</p>
        </div>
        <div class="card-content table-responsive">
          <table class="table table-hover">
            <thead>

            <tr>
              <th>Date</th>
              <th>Description</th>
              <th>Transaction Number</th>
              <th>Amount</th>
            </tr>
            </thead>
            <tbody>
            {{#each model as |payment| }}
              <tr class="just-arrived">
                <td>{{payment.createdOn}}</td>
                <td>{{payment.description}}</td>
                <td></td>
                <td>â‚¬ {{payment.amount}}</td>
              </tr>
            {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="card">
        <div class="col-sm-12">
          <div>
            {{pie-chart}}
          </div>
        </div>
      </div>
    </div>

  </div>
</div>


